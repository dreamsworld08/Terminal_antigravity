generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String          @unique
  hashedPassword String?
  image          String?
  role           String          @default("customer")
  phone          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  orders         Order[]
  savedDesigns   SavedDesign[]
  customRequests CustomRequest[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String
  price       Float
  category    String
  material    String
  color       String
  dimensions  String?
  image       String
  images      String      @default("[]")
  modelUrl    String?
  featured    Boolean     @default(false)
  inStock     Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  inventory   Inventory?
}

model Order {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  status    String      @default("pending")
  total     Float
  address   String?
  phone     String?
  notes     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  items     OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)
  price     Float
  options   String?
}

model SavedDesign {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  type      String
  prompt    String?
  imageUrl  String?
  modelData String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomRequest {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String
  budget      String?
  status      String   @default("pending")
  attachments String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ========================
// IMS (Inventory Management System) Models
// ========================

model IMSUser {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  hashedPassword String
  role           String   @default("superadmin")
  isActive       Boolean  @default(true)
  lastLogin      DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Inventory {
  id              String          @id @default(cuid())
  productId       String          @unique
  product         Product         @relation(fields: [productId], references: [id])
  sku             String          @unique
  quantity        Int             @default(0)
  reservedQty     Int             @default(0)
  reorderPoint    Int             @default(5)
  reorderQty      Int             @default(10)
  unitCost        Float           @default(0)
  location        String?
  lastRestocked   DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  stockMovements  StockMovement[]
  stockAlerts     StockAlert[]
}

model Supplier {
  id             String          @id @default(cuid())
  name           String
  email          String?
  phone          String?
  address        String?
  contactPerson  String?
  leadTimeDays   Int             @default(7)
  rating         Float           @default(0)
  isActive       Boolean         @default(true)
  notes          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  purchaseOrders PurchaseOrder[]
}

model PurchaseOrder {
  id            String              @id @default(cuid())
  orderNumber   String              @unique
  supplierId    String
  supplier      Supplier            @relation(fields: [supplierId], references: [id])
  status        String              @default("draft")
  totalAmount   Float               @default(0)
  notes         String?
  expectedDate  DateTime?
  receivedDate  DateTime?
  isAutoGenerated Boolean           @default(false)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  items         PurchaseOrderItem[]
}

model PurchaseOrderItem {
  id              String        @id @default(cuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  productName     String
  sku             String
  quantity        Int
  unitCost        Float
  totalCost       Float
  receivedQty     Int           @default(0)
}

model StockMovement {
  id          String    @id @default(cuid())
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  type        String    // "in", "out", "adjustment", "return"
  quantity    Int
  reason      String?
  reference   String?   // order ID or PO number
  createdAt   DateTime  @default(now())
}

model DemandForecast {
  id            String   @id @default(cuid())
  productName   String
  sku           String
  forecastDate  DateTime
  predictedQty  Int
  confidence    Float
  seasonality   String?  // "high", "medium", "low"
  trend         String?  // "up", "down", "stable"
  factors       String?  // JSON string of influencing factors
  createdAt     DateTime @default(now())
}

model ReorderRule {
  id              String   @id @default(cuid())
  name            String
  category        String?  // applies to product category, null = all
  minStockLevel   Int      @default(5)
  reorderQuantity Int      @default(10)
  maxStockLevel   Int      @default(100)
  autoReorder     Boolean  @default(true)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model StockAlert {
  id          String    @id @default(cuid())
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  type        String    // "low_stock", "out_of_stock", "overstock", "expiring"
  message     String
  severity    String    @default("warning") // "info", "warning", "critical"
  isRead      Boolean   @default(false)
  resolvedAt  DateTime?
  createdAt   DateTime  @default(now())
}
